//********** Includes *************************************************************
#include <Servo.h>

//********** Variables ************************************************************
Servo myservo;
int pos=90; //variable per emmagatzemar la variable del servo log 6
const int ServoMotor=9;

//********** Setup ****************************************************************
void setup() 
{
  myservo.attach(ServoMotor);
  myservo.write(pos);

}

//********** Loop *****************************************************************
void loop() 
{
  if(pos<100)
  {
   pos=pos-1;
  }
  
  else
  {
    pos=pos+1;
  }
}
