//********** Includes *************************************************************

//********** Variables ************************************************************
const int zumbador=8;

//********** Setup ****************************************************************
void setup()
{
  pinMode(zumbador,OUTPUT);
}

//********** Loop *****************************************************************
void loop()
{
  digitalWrite(zumbador,HIGH);
  delay(500);
  digitalWrite(zumbador,LOW);
  delay(500);
}

